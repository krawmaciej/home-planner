{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "@typescript-eslint",
    "unused-imports"
  ],
  "rules" : {
    "no-unused-vars": "off",
    "unused-imports/no-unused-vars": "warn",
    "unused-imports/no-unused-imports": "error",
    "semi": "error",
    "no-extra-semi": "warn",
    "no-unexpected-multiline": "warn"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ]
}

